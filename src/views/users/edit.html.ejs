<% const array = Object.keys(usuario.dataValues);
const len = Object.keys(usuario.dataValues).length - 4;
%>

<form method="post" action="<%= editUsuariosPath(jwt.encode(usuario.id, 'xxx')) %>">
    <% if (locals.errors) { %>
        <div class="errors">
            <p>Usuario no se pudo editar  debido a los siguientes errores:</p>
            <ul>
                <% errors.forEach(error => { %>
                    <li> <%= error.path %>: <%= error.message %></li>
               <% }); %>
            </ul>
        </div>
    <% } %>
    <select name="drop1" id="Select1">
        <% for (var i = 1; i<len; i++) { %>
            <option value="<%= array[i] %>"> <%= array[i] %> </option>
        <% } %>
    </select>
    
    <div class="field">
        <input type="hidden" name="_method" value="patch"/>
        <input type="text" name="cambio" id="cambio"/>
    </div>
    <div class="actions">
        <input type="submit" value="Editar"/>
    </div>
</form> 

