<form method="post" action="<%= createEquiposPath %>">
    <% if (locals.errors) { %>
        <div class="errors">
            <p>Equipo no se pudo crear debido a los siguientes errores:</p>
            <ul>
                <% errors.forEach(error => { %>
                    <li> <%= error.path %>: <%= error.message %></li>
               <% }); %>
            </ul>
        </div>
    <% } %>
    <div class="field">
        <label for ="nombre">Nombre</label>
        <input type="text" name="nombre" id="nombre" value="<%= equipo.nombre %>"/>
    </div>
    <div class="field">
        <label for ="description">Descripcion</label>
        <textarea name="description" id="description" rows="4" cols="30"><%= equipo.description %></textarea>
    </div>
    <div class="field">
        <label for ="capitan">Capitan</label>
        <input type="text" name="capitan" id="capitan" value="<%= equipo.capitan %>"/>
    </div>
    <div class="field">
        <label for ="horarios">Horarios</label>
        <input type="text" name="horarios" id="horarios" value="<%= equipo.horarios %>"/>
    </div>
    <div class="field">
        <label for ="foto">Foto</label>
        <input type="text" name="foto" id="foto" value="<%= equipo.foto %>"/>
    </div>
    <div class="field">
        <label for ="deporteId">ID Deporte</label>
        <input type="text" name="deporteId" id="deporteId" value="<%= equipo.deporte %>"/>
    </div>
    <div class="actions">
        <input type="submit" value="Crear"/>
    </div>
</form> 