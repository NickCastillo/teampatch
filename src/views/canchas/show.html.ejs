                <select name="equipoId" id="equipoId">
                  <% for (var i = 0; i<equipos.length; i++) { %>
                      <option value="<%= equipos[i].dataValues.id %>"> <%= equipos[i].dataValues.nombre %> </option>
                  <% } %>
              </select>
  
                <input type="hidden" name="canchaId" value="<%= cancha.id%>">
