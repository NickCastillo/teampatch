<form method="post" action="<%= createMensajePath %>">
    <% if (locals.errors) { %>
      <div class="errors">
        <p>El mensaje no se pudo crear debido a los siguientes errores:</p>
        <ul>
          <% errors.forEach(error => { %>
            <li><%= error.path %>: <%= error.message %></li>
          <% }); %>
        </ul>
      </div>
    <% } %>

    <div class="field">
        <label for="name">Contenido</label>
        <input type="text" id="contenido" name="contenido" value="<%= mensaje.contenido %>" />
      </div>
      <div class="field">
        <label for="name">Emisor</label>
        <input type="number" id="userId" name="userId" value="<%= mensaje.userId %>" />
      </div>
      <div class="field">
        <label for="name">Receptor</label>
        <input type="number" id="userId2" name="userId2" value="<%= mensaje.userId2 %>" />
      </div>
  
      <div class="actions">
        <input type="submit" value="Crear" />
      </div>
    </form>
    