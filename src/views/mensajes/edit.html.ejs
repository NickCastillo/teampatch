<% 
const array = Object.keys(mensaje.dataValues);
const len = Object.keys(mensaje.dataValues).length - 2;
%>

<form method="post" action="<%= editMensajePath(mensaje.id) %>">
    <% if (locals.errors) { %>
        <div class="errors">
            <p>Mensaje no se pudo editar  debido a los siguientes errores:</p>
            <ul>
                <% errors.forEach(error => { %>
                    <li> <%= error.path %>: <%= error.message %></li>
               <% }); %>
            </ul>
        </div>
    <% } %>
    <select name="drop1" id="Select1">
        <% for (var i = 1; i<len; i++) { %>
            <option value="<%= array[i] %>"> <%= array[i] %> </option>
        <% } %>
    </select>
    
    <div class="field">
        <input type="text" name="cambio" id="cambio"/>
    </div>
    <div class="actions">
        <input type="submit" value="Editar"/>
    </div>
</form> 
