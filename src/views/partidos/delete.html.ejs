<form method="post" action="<%= deletePartidosPath %>">
    <% if (locals.errors) { %>
        <div class="errors">
            <p>Partido no se pudo eliminar debido a los siguientes errores:</p>
            <ul>
                <% errors.forEach(error => { %>
                    <li> <%= error.path %>: <%= error.message %></li>
               <% }); %>
            </ul>
        </div>
    <% } %>
    <div class="field">
        <label for ="id">ID</label>
        <input type="text" name="id" id="id" />
    </div>
    <div class="actions">
        <input type="submit" value="Eliminar"/>
    </div>
</form> 