<form method="post" action="<%= createPartidosPath %>">
    <% if (locals.errors) { %>
        <div class="errors">
            <p>Equipo no se pudo crear debido a los siguientes errores:</p>
            <ul>
                <% errors.forEach(error => { %>
                    <li> <%= error.path %>: <%= error.message %></li>
               <% }); %>
            </ul>
        </div>
    <% } %>
    <div class="field">
        <label for ="fecha">Fecha</label>
        <input type="text" name="fecha" id="fecha" value="<%= partido.fecha %>"/>
    </div>
    <div class="field">
        <label for ="hora">Hora</label>
        <input type="text" name="hora" id="hora" value="<%= partido.hora %>"/>
    </div>
    <div class="field">
        <label for ="resultado">Resultado</label>
        <input type="text" name="resultado" id="resultado" value="<%= partido.resultado %>"/>
    </div>
    <div class="actions">
        <input type="submit" value="Crear"/>
    </div>
</form> 